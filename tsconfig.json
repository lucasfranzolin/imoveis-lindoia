{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": ".build",
        "preserveConstEnums": true,
        "rootDir": "./",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5",
        "types": ["node"]
    }
}
